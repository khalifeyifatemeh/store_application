<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical"
    android:id="@+id/id_vorud_activity"
    tools:context="com.example.fatemeh_pc.store_application.vorud_activity">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <EditText
            android:id="@+id/id_editText_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="10dp"
            android:ems="20"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"
            android:textColorHint="@color/white"
            android:layout_below="@+id/textView"
            android:hint="شماره موبایل"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <EditText
            android:id="@+id/id_editText_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="کلمه عبور"
            android:textColorHint="@color/white"
            android:padding="10dp"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="@color/colorAccent"
            android:layout_below="@+id/id_editText_phone"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />

        <Button
            android:id="@+id/id_btn_signin"
            android:text="ورود به مبل پلاس"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/id_editText_password"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/mybutton"
            />

        <Button
            android:id="@+id/id_btn_gotosignup"
            android:text="ثبت نام در مبل پلاس"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/id_btn_vorud"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/mybutton"

            />

    </LinearLayout>

</ScrollView>