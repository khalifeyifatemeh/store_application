<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:id="@+id/id_mainactivity"
    tools:context="com.example.fatemeh_pc.store_application.MainActivity">


<ViewFlipper
    android:id="@+id/id_mainflipper"
    android:layout_width="385dp"
    android:layout_height="200dp"
    android:autoStart="true"
    android:flipInterval="3000"
    android:inAnimation="@android:anim/fade_in"
    android:outAnimation="@android:anim/fade_out"
    android:scaleType="fitXY"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="0dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/str_img1"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/image1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/str_img2"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/image2" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/str_img3"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/image3" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/str_img4"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/image4" />


</ViewFlipper>

<TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:layout_marginTop="0dp">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp"
        >

        <Button
            android:id="@+id/id_btn_buff"
            android:text="باف"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.11"
            android:padding="0dp"
            android:background="@drawable/mybutton" />

        <Button
            android:id="@+id/id_btn_comfort"
            android:text="راحتی"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="0dp"
            android:background="@drawable/mybutton"/>

        <Button
            android:id="@+id/id_btn_royal"
            android:text="سلطنتی"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:padding="0dp"
            android:background="@drawable/mybutton"
          />

    </TableRow>

</TableLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Button
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="مدیریت"
                android:textColor="@color/black"
                android:background="@drawable/mybutton"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                />
            <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="محصولات پرفروش"
            android:textColor="@color/black"
            android:background="@color/white"
            android:textStyle="bold|italic"
            android:fontFamily=""
            android:textColorHighlight="@color/colorPrimary"
            android:textSize="15dp"
            android:padding="0dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="5dp"/>


        </TableRow>
</TableLayout>
</LinearLayout>
